<h2 class="deviseHeading"><%= resource_name.capitalize %> Sign up</h2>


<div class="formWrap">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>
    
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>
    
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>   
    
    <div class="field">
      <%= f.label :address_line_1 %><br />
      <%= f.text_field :street_1 %>
    </div>
    
    <div class="field">
      <%= f.label :address_line_2 %><br />
      <%= f.text_field :street_2 %>
    </div>
    
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>
    
    <div class="field">
      <%= f.label :zip_code %><br />
      <%= f.number_field :zip %>
    </div>
    
    <%= if resource_name == "user" %>
    <div class="field">
      <%= f.label :date_of_birth %><br />
      <%= f.date_field :phone %>
    </div>
    <% end %>
  
    <div class="actions" id="signupBtn">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <div class="loginLinkWrap">
    <%= render "devise/shared/links" %>
  </div>

  <div class="logoWrap">
    <img src="https://codecopycoffee.com/wp-content/uploads/2019/06/brew2ulogo.png" alt="brew2ulogo" />
  </div>
</div>
